<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_hola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hola "
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/txt_nombre_bd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Jhon Doe"
        android:layout_toRightOf="@+id/txt_hola"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/txt_elige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Elige tus categorias"
        android:layout_below="@+id/txt_nombre_bd2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp" />



    <ListView
        android:id="@+id/list_elegir"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_elige"
        android:layout_above="@+id/btn_crear"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:id="@+id/btn_crear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Crear cuenta"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"/>
</RelativeLayout>