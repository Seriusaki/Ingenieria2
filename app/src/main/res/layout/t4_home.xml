<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_titulo"
        android:src="@drawable/teleticket_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        />

    <TextView
        android:id="@+id/txt_bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bienvenido "
        android:layout_below="@+id/img_titulo"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txt_nombre_bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Aqui va el nombre"
        android:layout_below="@+id/img_titulo"
        android:layout_toRightOf="@id/txt_bienvenido"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btn_hoy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â¿Que puedo hacer hoy?"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_nombre_bd"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/btn_recomendacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recomendaciones del dia"
        android:layout_below="@+id/btn_hoy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp" />

</RelativeLayout>